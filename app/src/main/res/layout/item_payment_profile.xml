<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:layout_centerVertical="true"
    >

    <TextView
        android:id="@+id/tvPaymentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="150dp"
        android:layout_marginStart="28dp"
        android:hint="GoPay"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:fontFamily="@font/roboto_bold"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <ImageButton
        android:id="@+id/editPaymentBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.799"
        app:layout_constraintStart_toEndOf="@+id/tvPaymentName"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/deletePaymentBtn"
        android:layout_width="20dp"
        android:layout_height="22dp"
        android:background="@drawable/ic_delete"
        android:backgroundTint="@color/gray_3rd"
        app:layout_constraintBottom_toBottomOf="@+id/editPaymentBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toEndOf="@+id/editPaymentBtn"
        app:layout_constraintTop_toTopOf="@+id/editPaymentBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>