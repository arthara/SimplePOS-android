<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="category"
            type="com.simple.pos.shared.model.Category" />
    </data>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:background="@color/light_gray_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/categoryColor"
            android:layout_width="@dimen/category_color_list_width"
            android:layout_height="@dimen/category_color_list_width"
            android:layout_alignParentStart="true"
            android:background="@{category.getParsedColor()}"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{category.name}"
            android:layout_centerInParent="true"
            android:hint="Nama"
            android:layout_toEndOf="@+id/categoryColor"
            android:layout_toStartOf="@+id/editCategoryBtn"/>

        <ImageView
            android:id="@+id/editCategoryBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/deleteCategoryBtn"
            app:srcCompat="@android:drawable/ic_menu_edit" />

        <ImageView
            android:id="@+id/deleteCategoryBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            app:srcCompat="@android:drawable/ic_menu_delete" />
    </RelativeLayout>
</layout>