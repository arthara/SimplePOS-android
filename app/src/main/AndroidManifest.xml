<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.simple.pos">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".shared.SimplePosApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">
        <activity
            android:name=".modul.splashscreen.SplashActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".modul.register.RegisterActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".modul.login.LoginActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".modul.dashboard.DashboardActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".modul.storeinput.StoreInputActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name=".modul.newcategory.NewCategoryActivity"/>
        <activity android:name=".modul.editcategory.EditCategoryActivity"/>
        <activity android:name=".modul.profiluser.ProfileUserActivity"/>
        <activity android:name=".modul.profiluser.storesetting.ProfileStoreActivity"/>
        <activity android:name=".modul.profiluser.storesetting.update.ProfileStoreUpdateActivity"/>
        <activity android:name=".modul.profiluser.profilnote.NoteStoreActivity"/>
        <activity android:name=".modul.profiluser.profilnote.update.NoteStoreUpdateActivity"/>
        <activity android:name=".modul.checkout.CheckoutActivity"/>
        <activity android:name=".modul.detailcheckout.DetailCheckoutActivity"/>
        <activity android:name=".modul.checkoutsuccess.CheckoutSuccessActivity"/>
        <activity android:name=".modul.dailycashflow.DailyCashflowActivity"/>
        <activity android:name=".modul.inforeceipt.InfoReceiptActivity" />
        <activity android:name=".modul.product.create.CreateProductActivity" />
        <activity android:name=".modul.product.listcategory.ListCategoryActivity" />
        <activity android:name=".modul.product.update.UpdateProductActivity" />
        <activity android:name=".modul.holdcheckout.HoldCheckoutActivity"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>